@model IEnumerable<ProjetoIdentity.Models.Entities.Categoria>;

@{
    ViewData["title"] = "Lista de categorias";
}

<div class="row">
    <h2>@ViewData["title"]</h2>

    <a asp-action="Create" class="btn btn-primary">Cadastrar uma nova categoria</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td><a asp-action="Edit" asp-route-id="Id" class="btn btn-warning">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>