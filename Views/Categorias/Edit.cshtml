@model ProjetoIdentity.Models.Entities.Categoria;

@{
    ViewData["title"] = "Editar categorias";
}

<div class="row">
    <h2>@ViewData["title"]</h2>

    <a asp-action="Index" class="btn btn-primary">Voltar a lista de categorias</a>

    <form asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="Nome" class="control-label">Nome da categoria</label>
            <input asp-for="Nome" type="text" class="form-controle">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </form>
</div>