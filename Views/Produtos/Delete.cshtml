@model ProjetoIdentity.Models.Entities.Produto

@{
    ViewData["title"] = "Excluir Produtos";
}

<div class="row">
    <h2>@ViewData["title"]</h2>

    <p><a asp-action="Index" class="btn btn-primary">Voltar a lista de produtos</a></p>

    <hr />

    <h3>Detalhes do produto</h3>

    <dl class="horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>
        <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd>@Html.DisplayFor(model => model.Descricao)</dd>
    </dl>
    
    <div class="alert alert-danger">Deseja realmente excluir esses registro?</div>

    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id">
            <button class="btn btn-danger">Excluir</button>
        </form>

</div>